{
  "name": "hls-demo",
  "version": "1.0.0",
  "description": "Simple HLS video player.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "dev:watch": "ts-node-dev --respawn src/index.ts",
    "clean": "rimraf dist/*",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "format": "prettier --write .",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terabayashik/hls-demo.git"
  },
  "keywords": [],
