  "license": "ISC",
  "bugs": {
    "url": "https://github.com/terabayashik/hls-demo/issues"
  },
  "homepage": "https://github.com/terabayashik/hls-demo#readme",
  "devDependencies": {
    "@types/node": "^18.6.4",
    "chokidar": "^3.5.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4",
    "vitest": "^0.21.0"
  },
  "dependencies": {
    "esbuild": "^0.14.53",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
